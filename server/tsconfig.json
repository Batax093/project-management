{
    "compilerOptions": {
      "target": "es6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "app.ts", "prisma/**/*", "src/data/**/*"],
    "exclude": ["node_modules"]
}